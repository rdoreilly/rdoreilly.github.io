doctype html
html(lang="en")
	include components/head.pug
	body
		include components/nav.pug
		div(class="container" style="margin-top:30px")
			div(class="row")
				div(class="col-sm-4")
					include components/left_side_bar.pug
				div(class="col-sm-8")
					h2 Publications
					table(class="table table-striped table-sm")
						thead
							tr
								th Authors
								th Title
								th Venue
								th Year
								th PDF
								th RG
								th .bib
						tbody
							each paper in PUBLICATIONS.pub
								tr
									td !{paper.authors}
									td !{paper.title}
									td !{paper.venue}
									td !{paper.year}
									if paper.pdf
										td
											a(href=paper.pdf) link
									else
										td NA
									if paper.research_gate
										td
											a(href=paper.research_gate) link
									else
										td NA
									if paper.google_scholar
										td
											a(href=paper.google_scholar) link
									else
										td NA

		include components/footer.pug
				
