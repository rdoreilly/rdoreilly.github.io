include partials/mixins.pug
doctype html
html(lang="en")
    include components/head.pug
    body
        include components/nav.pug
        div(class="container" style="margin-top:30px")
            div(class="row")
                div(class="col-sm-2")
                    include components/left_sidebar_research
                div(class="col-sm-10")
                    d(class="card-deck")
                        div(class="col-sm-5")
                            div(class="card")
                                div(class="card-body")
                                    h5(class="card-title") Artificial Intelligence
                                    ul( class="card-text")
                                        li Machine Learning
                                        li Generative Adversarial Networks
                                        li Explainable Artificial Intelligence
                                        li FAIR AI
                                    a(href="#" class="card-link") Card link
                            div(class="card")
                                div(class="card-body")
                                    h5(class="card-title") Software Engineering
                                    ul( class="card-text")
                                        li Distributed Systems (Web and Cloud-based Architectures)
                                        li Data Analytics (Real-time analytics, Big Data, Stream Computing)
                                        li Data Visualisation
                                    a(href="#" class="card-link") Card link
                        div(class="col-sm-5")
                            div(class="card")
                                div(class="card-body")
                                    h5(class="card-title") E-health
                                    ul( class="card-text")
                                        li Physiological data
                                        li Biomedical image analysis
                                        li Decision Support Systems
                                        li Knowledge Discovery
                                    a(href="#" class="card-link") Card link
                            div(class="card")
                                div(class="card-body")
                                    h5(class="card-title") Affective Computing
                                    ul( class="card-text")
                                        li Affective sensing and simulation.
                                        li Multi-modal systems for human affect
                                        li Applied psychology (Personality, Emotion, Goal-setting)
                                    a(href="#" class="card-link") Card link
            div(class="row")
                div(class="col-sm-12")
                    h5(class="text-center") Phd Students

                    d(class="card-deck")
                        +student_card('Ryan Donovan', './img/prof.jpg', 'Some quick example text to build on the card title and make up the bulk of the cards content.',  './ryan')

                        +student_card('Urja Pawar','./img/prof.jpg', 'Some quick example text to build on the card title and make up the bulk of the cards content.', './urja')

                        +student_card('Muhammad Saad','./img/prof.jpg', 'Some quick example text to build on the card title and make up the bulk of the cards content.', './saad')

                        +student_card('Zac Dair', './img/prof.jpg', 'Some quick example text to build on the card title and make up the bulk of the cards content.', './zac')

            div(class="row")
                div(class="col-sm-2")
                div(class="col-sm-10")
                    h4(class="text-center") MSc Students
            div(class="row")
                div(class="col-sm-2")
                div(class="col-sm-10")
                    h4(class="text-center") BSc Students
            div(class="row")
                div(class="col-sm-2")
                div(class="col-sm-10")
                   h4(class="text-center") Alumni

        include components/footer.pug